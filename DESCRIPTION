Package: MendelianRandomization
Type: Package
Title: Mendelian Randomization Package
Version: 0.9.0
Date: 2023-08-07
Authors@R: c(person("Stephen", "Burgess", role = c("aut","cre"), email="sb452@medschl.cam.ac.uk"),
              person("Olena", "Yavorska", role = "aut", email ="olena.yavorska@ludwig.ox.ac.uk"),
              person("James", "Staley", role="aut", email = "james.staley@bristol.ac.uk"),
              person("Jim", "Broadbent", role = "ctb"),
              person("Amy", "Mason", role="ctb")
